<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.nwpu.fleamarket.dao.UserDao">

    <resultMap id="BaseResultMap" type="cn.edu.nwpu.fleamarket.pojo.User">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="student_no" jdbcType="VARCHAR" property="student_no"></result>
        <result column="password" jdbcType="VARCHAR" property="password" ></result>
        <result column="email" jdbcType="VARCHAR" property="email" ></result>
        <result column="phone" jdbcType="VARCHAR" property="phone" ></result>
        <result column="user_name" jdbcType="VARCHAR" property="user_name" ></result>
        <result column="wechat" jdbcType="VARCHAR" property="wechat" ></result>
    </resultMap>

    <select id="selectByStudentNo" parameterType="string" resultMap="BaseResultMap">
        SELECT * FROM users WHERE student_no=#{studentNo}
    </select>

    <insert id="addStudent" parameterType="cn.edu.nwpu.fleamarket.pojo.User">
        INSERT INTO users (`student_no`,`user_name`,`phone`,`email`,`wechat`, `password`)
        VALUES (#{studentNo}, #{userName}, #{phone}, #{email}, #{wechat},#{password});
    </insert>

    <select id="findManager" parameterType="cn.edu.nwpu.fleamarket.pojo.User" resultMap="BaseResultMap">
        SELECT * FROM users where student_no=#{studentNo} and password = #{password}
    </select>



